{
  "name": "uni-helper",
  "private": true,
  "description": "Make uni-* work better in other editors, such as VSCode and WebStorm.",
  "keywords": [
    "uni",
    "uni-app",
    "uni-ui",
    "uni-cloud"
  ],
  "homepage": "https://github.com/ModyQyW/uni-helper#readme",
  "bugs": {
    "url": "https://github.com/ModyQyw/uni-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/uni-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "scripts": {
    "check": "ncu",
    "clean": "rimraf ./**/*.vsix",
    "commit": "cz",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.jsx,.ts,.tsx,.vue --ignore-path=.gitignore",
    "lint:json": "prettier ./**/*.json --write",
    "lint:markdown": "markdownlint . --fix",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "prepare": "is-ci || husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "~7.16.5",
    "@babel/eslint-parser": "~7.16.5",
    "@commitlint/cli": "~15.0.0",
    "@modyqyw/fabric": "~4.3.0",
    "@types/node": "~17.0.0",
    "@typescript-eslint/eslint-plugin": "~5.7.0",
    "@typescript-eslint/parser": "~5.7.0",
    "commitizen": "~4.2.4",
    "eslint": "~8.4.1",
    "husky": "~7.0.4",
    "is-ci": "~3.0.1",
    "lint-staged": "~12.1.2",
    "markdownlint-cli": "~0.30.0",
    "prettier": "~2.5.1",
    "rimraf": "~3.0.2",
    "typescript": "~4.5.4"
  }
}
