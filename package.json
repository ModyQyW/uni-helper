{
  "name": "uni-helper",
  "private": true,
  "description": "Enhance the experience of the `uni-app` family of products. 增强 `uni-app` 系列产品的体验。",
  "keywords": [
    "uni",
    "uni-app",
    "uni-ui",
    "uni-cloud"
  ],
  "homepage": "https://github.com/ModyQyW/uni-helper#readme",
  "bugs": {
    "url": "https://github.com/ModyQyw/uni-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/uni-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "scripts": {
    "check": "ncu",
    "clean": "rimraf ./**/*.vsix",
    "commit": "git-cz",
    "lint": "run-p lint:eslint lint:stylelint lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,less,scss,vue,svelte}\" --fix --allow-empty-input --ignore-path=.gitignore --cache",
    "prepare": "is-ci || husky install",
    "build:docs": "pnpm --filter docs run build",
    "dev:docs": "pnpm --filter docs run dev",
    "serve:docs": "pnpm --filter docs run serve",
    "release:docs": "pnpm --filter docs run release",
    "release:uni-app-deploy": "pnpm --filter uni-app-deploy run release",
    "release:uni-app-network": "pnpm --filter uni-app-network run release",
    "release:uni-app-types": "pnpm --filter uni-app-types run release",
    "release:uni-app-use": "pnpm --filter uni-app-use run release",
    "release:uni-cloud-types": "pnpm --filter uni-cloud-types run release",
    "release:uni-ui-types": "pnpm --filter uni-ui-types run release",
    "release:vite-plugin-uni-app-tailwind": "pnpm --filter vite-plugin-uni-app-tailwind run release",
    "release:vscode-uni-app-schemas": "pnpm --filter vscode-uni-app-schemas run release",
    "release:vscode-uni-app-snippets": "pnpm --filter vscode-uni-app-snippets run release",
    "release:vscode-uni-cloud-snippets": "pnpm --filter vscode-uni-cloud-snippets run release",
    "release:vscode-uni-helper": "pnpm --filter vscode-uni-helper run release",
    "release:vscode-uni-ui-snippets": "pnpm --filter vscode-uni-ui-snippets run release",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/prompt": "^17.1.2",
    "@dcloudio/types": "^3.0.16",
    "@modyqyw/fabric": "^5.10.0",
    "@swc/core": "^1.3.10",
    "@tsconfig/node16": "^1.0.3",
    "@types/babel__core": "^7.1.19",
    "@types/eslint": "^8.4.7",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitest/coverage-c8": "^0.24.3",
    "@vitest/ui": "^0.24.3",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.5.1",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.14.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.3.0",
    "tsx": "^3.11.0",
    "typescript": "^4.8.4",
    "vitest": "^0.24.3",
    "vsce": "^2.13.0"
  },
  "engines": {
    "node": ">=14.16"
  }
}
