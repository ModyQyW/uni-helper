{
  "name": "uni-helper",
  "private": true,
  "description": "Enhance the experience of the `uni-app` family of products. 增强 `uni-app` 系列产品的体验。",
  "keywords": [
    "uni",
    "uni-app",
    "uni-ui",
    "uni-cloud"
  ],
  "homepage": "https://github.com/ModyQyW/uni-helper#readme",
  "bugs": {
    "url": "https://github.com/ModyQyw/uni-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/uni-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "scripts": {
    "check": "ncu",
    "clean": "rimraf ./**/*.vsix",
    "commit": "git-cz",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "prepare": "is-ci || husky install",
    "release:vscode-uni-app-schemas": "pnpm --filter vscode-uni-app-schemas run release",
    "release:vscode-uni-app-snippets": "pnpm --filter vscode-uni-app-snippets run release",
    "release:vscode-uni-cloud-snippets": "pnpm --filter vscode-uni-cloud-snippets run release",
    "release:vscode-uni-helper": "pnpm --filter vscode-uni-helper run release",
    "release:vscode-uni-ui-snippets": "pnpm --filter vscode-uni-ui-snippets release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@modyqyw/fabric": "^5.3.1",
    "@tsconfig/node16": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "commitizen": "^4.2.4",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.7.1",
    "release-it": "^15.1.1",
    "rimraf": "^3.0.2",
    "tsx": "^3.7.1",
    "typescript": "^4.7.4",
    "vsce": "^2.9.2"
  }
}
