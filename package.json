{
  "name": "uni-helper",
  "private": true,
  "description": "Enhance the experience of the `uni-app` family of products. 增强 `uni-app` 系列产品的体验。",
  "keywords": [
    "uni",
    "uni-app",
    "uni-ui",
    "uni-cloud"
  ],
  "homepage": "https://github.com/ModyQyW/uni-helper#readme",
  "bugs": {
    "url": "https://github.com/ModyQyw/uni-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/uni-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "scripts": {
    "check": "ncu",
    "clean": "rimraf ./**/*.vsix",
    "commit": "git-cz",
    "lint": "pnpm run lint:eslint && pnpm run lint:styelint && pnpm run lint:markdownlint",
    "lint:eslint": "eslint . --fix --ext=.js,.cjs,.mjs,.jsx,.ts,.cts,.mts,.tsx,.vue --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "lint:stylelint": "stylelint \"./**/*.{css,less,scss,vue,svelte}\" --fix --allow-empty-input --ignore-path=.gitignore",
    "prepare": "is-ci || husky install",
    "build:docs": "pnpm --filter docs build",
    "dev:docs": "pnpm --filter docs dev",
    "serve:docs": "pnpm --filter docs serve",
    "release:uni-app-types": "pnpm --filter uni-app-types release",
    "release:uni-app-use": "pnpm --filter uni-app-use release",
    "release:uni-cloud-types": "pnpm --filter uni-cloud-types release",
    "release:uni-request": "pnpm --filter @modyqyw/uni-request release",
    "release:uni-ui-types": "pnpm --filter uni-ui-types release",
    "release:vscode-uni-app-schemas": "pnpm --filter vscode-uni-app-schemas run release",
    "release:vscode-uni-app-snippets": "pnpm --filter vscode-uni-app-snippets run release",
    "release:vscode-uni-cloud-snippets": "pnpm --filter vscode-uni-cloud-snippets run release",
    "release:vscode-uni-helper": "pnpm --filter vscode-uni-helper run release",
    "release:vscode-uni-ui-snippets": "pnpm --filter vscode-uni-ui-snippets release"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt": "^17.0.3",
    "@modyqyw/fabric": "^5.7.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/eslint": "^8.4.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.1",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.5.1",
    "prettier": "^2.7.1",
    "release-it": "^15.3.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.10.0",
    "tsup": "^6.2.2",
    "tsx": "^3.8.2",
    "typescript": "^4.7.4",
    "vsce": "^2.10.0"
  }
}
