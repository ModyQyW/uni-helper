{
  "name": "@modyqyw/uni-request",
  "version": "0.2.1",
  "description": "`Promise` based HTTP client for `uni-app`. 为 `uni-app` 打造的基于 `Promise` 的 HTTP 客户端。",
  "keywords": [
    "uni-app",
    "uniapp",
    "request"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ModyQyW/uni-helper/tree/main/packages/uni-request"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsup-node src/index.js --format esm,cjs --minify --shims --target es5 && cpy src/index.d.ts dist --flat",
    "dev": "pnpm run build --watch src",
    "lint": "npx eslint src --fix && npx tsc --noEmit",
    "release": "npx release-it",
    "test": "vitest --ui",
    "test:coverage": "vitest --ui --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "dependencies": {
    "@dcloudio/types": "^2.6.12",
    "@types/lodash-es": "^4.17.6",
    "@types/qs": "^6.9.7",
    "@types/ramda": "^0.28.15",
    "@types/statuses": "^2.0.0",
    "@types/ungap__url-search-params": "^0.1.0",
    "@ungap/url-search-params": "^0.2.2",
    "change-case": "^4.1.2",
    "lodash-es": "^4.17.21",
    "qs": "^6.11.0",
    "ramda": "^0.28.0",
    "statuses": "^2.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.211",
    "@tsconfig/node16": "^1.0.3",
    "@vitest/ui": "^0.18.0",
    "cpy-cli": "^4.1.0",
    "vitest": "^0.18.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): @modyqyw/uni-request@${version}",
      "tagName": "@modyqyw/uni-request@${version}"
    },
    "hooks": {
      "before:init": "pnpm install && pnpm run lint",
      "after:bump": "pnpm run build"
    }
  }
}
