{
  "description": "应用页面配置文件。更多信息查看 <https://uniapp.dcloud.io/collocation/pages>。",
  "type": "object",
  "properties": {
    "globalStyle": {
      "allOf": [
        { "$ref": "#/definitions/style" },
        {
          "description": "默认窗口表现。",
          "properties": {
            "pageOrientation": {
              "description": "屏幕方向配置。",
              "type": "string",
              "enum": ["auto", "portrait", "landscape"]
            },
            "animationType": {
              "description": "窗口显示的动画效果。",
              "type": "string",
              "enum": [
                "slide-in-right",
                "slide-in-left",
                "slide-in-top",
                "slide-in-bottom",
                "pop-in",
                "fade-in",
                "zoom-out",
                "zoom-fade-out",
                "none"
              ]
            },
            "animationDuration": {
              "description": "窗口显示动画的持续时间。单位为 ms。默认为 300。",
              "type": "number"
            },
            "renderingMode": {
              "description": "渲染模式。",
              "type": "string",
              "enum": ["seperated"]
            },
            "rpxCalcMaxDeviceWidth": {
              "description": "rpx 计算所支持的最大设备宽度。单位为 px。默认为 960。",
              "type": "number"
            },
            "rpxCalcBaseDeviceWidthN": {
              "description": "rpx 计算使用的基准设备宽度，设备实际宽度超出 rpx 计算所支持的最大设备宽度时将按基准宽度计算。单位为 px。默认为 375。",
              "type": "number"
            },
            "rpxCalcIncludeWidth": {
              "description": "rpx 计算特殊处理的值，始终按实际的设备宽度计算。单位为 rpx。默认为 750。",
              "type": "number"
            }
          }
        }
      ]
    },
    "pages": { "$ref": "#/definitions/pages" },
    "easycom": {
      "description": "组件自动引入规则。",
      "type": "object",
      "properties": {
        "autoscan": {
          "description": "是否开启自动扫描。",
          "type": "boolean"
        },
        "custom": {
          "description": "以正则方式自定义组件匹配规则。",
          "type": "object"
        }
      }
    },
    "tabBar": {
      "description": "设置 TabBar。",
      "type": "object",
      "required": ["color", "selectedColor", "backgroundColor", "list"],
      "properties": {
        "color": {
          "description": "文字默认颜色。",
          "type": "string",
          "format": "color"
        },
        "selectedColor": {
          "description": "文字选中时颜色。",
          "type": "string",
          "format": "color"
        },
        "backgroundColor": {
          "description": "背景色。",
          "type": "string",
          "format": "color"
        },
        "borderStyle": {
          "description": "上边框的颜色。",
          "type": "string",
          "enum": ["black", "white"]
        },
        "blurEffect": {
          "description": "iOS 高斯模糊效果。",
          "type": "string",
          "enum": ["none", "dark", "extralight", "light"]
        },
        "list": {
          "description": "列表。",
          "type": "array",
          "minItems": 2,
          "maxItems": 5,
          "items": {
            "type": "object",
            "required": ["pagePath", "text"],
            "properties": {
              "pagePath": {
                "description": "页面路径。",
                "type": "string"
              },
              "text": {
                "description": "按钮文字。",
                "type": "string"
              },
              "iconPath": {
                "description": "本地图标路径。",
                "type": "string"
              },
              "selectedIconPath": {
                "description": "选中时的本地图标路径。",
                "type": "string"
              }
            }
          }
        },
        "position": {
          "description": "位置。",
          "type": "string",
          "enum": ["bottom", "top"]
        },
        "fontSize": {
          "description": "默认字体大小。",
          "type": "string"
        },
        "iconWidth": {
          "description": "图标默认宽度，高度将等比例缩放。",
          "type": "string"
        },
        "spacing": {
          "description": "图标和文字的间距。",
          "type": "string"
        },
        "height": {
          "description": "默认高度。",
          "type": "string"
        },
        "midButton": {
          "description": "中间按钮，list 元素数量为偶数时有效。",
          "type": "object",
          "properties": {
            "width": {
              "description": "中间按钮宽度。",
              "type": "string"
            },
            "height": {
              "description": "中间按钮高度。",
              "type": "string"
            },
            "text": {
              "description": "中间按钮文字。",
              "type": "string"
            },
            "iconPath": {
              "description": "中间按钮图标路径。",
              "type": "string"
            },
            "iconWidth": {
              "description": "图标宽度，高度等比例缩放。",
              "type": "string"
            },
            "backgroundImage": {
              "description": "中间按钮背景图标路径。",
              "type": "string"
            }
          }
        }
      }
    },
    "condition": {
      "type": "object",
      "description": "启动模式配置。",
      "required": ["list", "current"],
      "properties": {
        "list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "path"],
            "properties": {
              "name": {
                "description": "启动模式名称。",
                "type": "string"
              },
              "path": {
                "description": "启动页面路径。",
                "type": "string"
              },
              "query": {
                "description": "启动参数。",
                "type": "string"
              }
            }
          }
        },
        "current": {
          "description": "当前激活 list 元素的索引值。",
          "type": "number"
        }
      }
    },
    "subPackages": {
      "description": "分包加载规则。",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["root", "pages"],
        "properties": {
          "root": {
            "description": "子包的根目录。",
            "type": "string"
          },
          "pages": { "$ref": "#/definitions/pages" }
        }
      }
    },
    "preloadRule": {
      "description": "分包预下载规则。",
      "type": "object",
      "properties": {
        "packages": {
          "description": "进入页面后预下载分包的 root 或 name。APP 表示主包。",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "network": {
          "description": "在指定网络下预下载。",
          "type": "string",
          "enum": ["all", "wifi"]
        }
      }
    },
    "workers": {
      "description": "Worker 代码目录。",
      "type": "string"
    },
    "leftWindow": {
      "allOf": [{ "$ref": "#/definitions/window" }, { "description": "大屏左侧窗口。" }]
    },
    "topWindow": {
      "allOf": [{ "$ref": "#/definitions/window" }, { "description": "大屏顶部窗口。" }]
    },
    "rightWindow": {
      "allOf": [{ "$ref": "#/definitions/window" }, { "description": "大屏右侧窗口。" }]
    }
  },
  "definitions": {
    "titleNView": {
      "description": "导航栏。",
      "type": "object",
      "properties": {
        "backgroundColor": {
          "description": "背景颜色，#RRGGBB 格式。",
          "type": "string",
          "format": "color"
        },
        "buttons": {
          "description": "自定义按钮。",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "description": "自定义按钮样式。默认为 none。",
                "type": "string",
                "enum": ["forward", "back", "share", "favorite", "home", "menu", "close", "none"]
              },
              "color": {
                "description": "自定义按钮文字颜色。默认和标题文字颜色一样。",
                "type": "string",
                "format": "color"
              },
              "background": {
                "description": "自定义按钮背景色，titleNView.type 为 transparent 时有效。默认为灰色半透明。",
                "type": "string",
                "format": "color"
              },
              "colorPressed": {
                "description": "自定义按钮按下状态文字颜色。默认值为 color 属性值自动调整透明度为 0.3。",
                "type": "string",
                "format": "color"
              },
              "float": {
                "description": "自定义按钮在标题栏的显示位置。",
                "type": "string",
                "enum": ["right", "left"]
              },
              "fontWeight": {
                "description": "自定义按钮文字粗细。",
                "type": "string",
                "enum": ["normal", "bold"]
              },
              "fontSize": {
                "description": "自定义按钮文字大小。",
                "type": "string"
              },
              "fontSrc": {
                "description": "自定义按钮字体文件路径。只支持本地地址。",
                "type": "string"
              },
              "select": {
                "description": "自定义按钮是否显示下箭头。默认为 false。",
                "type": "boolean"
              },
              "text": {
                "description": "自定义按钮文字内容。使用字体图标时 unicode 字符表示必须 '\\u' 开头，如 '\\ue123'。",
                "type": "string"
              },
              "width": {
                "description": "自定义按钮文字内容。支持像素值和 auto，不支持 rpx。默认为 44px。",
                "type": "string"
              }
            }
          }
        },
        "titleColor": {
          "description": "标题颜色。默认为 #000000。",
          "type": "string",
          "format": "color"
        },
        "titleOverflow": {
          "description": "标题文字超出显示区域时处理方式。默认为 ellipsis。",
          "type": "string",
          "enum": ["ellipsis", "clip"]
        },
        "titleText": {
          "description": "标题内容。",
          "type": "string"
        },
        "titleSize": {
          "description": "标题字体大小。",
          "type": "string"
        },
        "type": {
          "description": "导航栏样式。默认为 default。",
          "type": "string",
          "enum": ["default", "transparent", "float"]
        },
        "tags": {
          "description": "原生 View 增强。",
          "type": "array",
          "items": {
            "id": {
              "description": "绘制操作标识。",
              "type": "string"
            },
            "tag": {
              "description": "绘制操作类型。",
              "type": "string",
              "enum": ["img", "rect", "font", "richtext", "input"]
            },
            "inputStyles": {
              "description": "绘制输入框的样式。",
              "type": "object",
              "properties": {
                "type": {
                  "description": "输入框类型。默认为 text。",
                  "type": "string",
                  "enum": ["email", "number", "search", "tel", "text", "url"]
                },
                "placeholder": {
                  "description": "输入框的提示文本。",
                  "type": "string"
                },
                "fontSize": {
                  "description": "输入框的字体大小。默认为 16px。",
                  "type": "string"
                },
                "borderWidth": {
                  "description": "输入框的边框宽度。默认为 1px。",
                  "type": "string"
                },
                "borderColor": {
                  "description": "输入框的边框颜色，#RRGGBB 格式。默认为 #000000。",
                  "type": "string",
                  "format": "color"
                },
                "borderRadius": {
                  "description": "输入框边框圆角半径。默认为 0px。",
                  "type": "string"
                }
              }
            },
            "position": {
              "description": "绘制内容区域。",
              "type": "object",
              "properties": {
                "top": {
                  "description": "区域顶部相对于作用对象（或容器）向下的偏移量。可填写百分比或 auto。默认为 0px。",
                  "type": "string"
                },
                "left": {
                  "description": "区域顶部相对于作用对象（或容器）向右的偏移量。可填写百分比或 auto。默认为 0px。",
                  "type": "string"
                },
                "width": {
                  "description": "区域宽度。可填写像素值或百分比。默认为 100%。",
                  "type": "string"
                },
                "height": {
                  "description": "区域高度。可填写像素值或百分比。默认为 100%。",
                  "type": "string"
                },
                "bottom": {
                  "description": "区域顶部相对于作用对象（或容器）向上的偏移量。可填写百分比或 auto。",
                  "type": "string"
                },
                "right": {
                  "description": "区域顶部相对于作用对象（或容器）向左的偏移量。可填写百分比或 auto。",
                  "type": "string"
                }
              }
            },
            "rectStyles": {
              "description": "绘制区域的样式。tag 为 rect 时有效。",
              "type": "object",
              "properties": {
                "color": {
                  "description": "绘制颜色，#RRGGBB 格式。默认为 #ffffff。",
                  "type": "string",
                  "format": "color"
                },
                "radius": {
                  "description": "矩形区域的圆角半径。默认为 0px。",
                  "type": "string"
                },
                "borderColor": {
                  "description": "矩形边框颜色，#RRGGBB 格式。默认为 color 的值。",
                  "type": "string",
                  "format": "color"
                },
                "borderWidth": {
                  "description": "矩形边框宽度。默认为 0px。",
                  "type": "string"
                }
              }
            },
            "src": {
              "description": "绘制的图片资源。",
              "type": ["string", "object"]
            },
            "sprite": {
              "description": "图片源的绘制区域。",
              "type": "object",
              "properties": {
                "top": {
                  "description": "区域顶部相对于作用对象（或容器）向下的偏移量。可填写百分比或 auto。默认为 0px。",
                  "type": "string"
                },
                "left": {
                  "description": "区域顶部相对于作用对象（或容器）向右的偏移量。可填写百分比或 auto。默认为 0px。",
                  "type": "string"
                },
                "width": {
                  "description": "区域宽度。可填写像素值或百分比。默认为 100%。",
                  "type": "string"
                },
                "height": {
                  "description": "区域高度。可填写像素值或百分比。默认为 100%。",
                  "type": "string"
                },
                "bottom": {
                  "description": "区域顶部相对于作用对象（或容器）向上的偏移量。可填写百分比或 auto。",
                  "type": "string"
                },
                "right": {
                  "description": "区域顶部相对于作用对象（或容器）向左的偏移量。可填写百分比或 auto。",
                  "type": "string"
                }
              }
            },
            "text": {
              "description": "绘制的文本内容。tag 为 font 时有效。",
              "type": "string",
              "properties": {}
            },
            "textStyles": {
              "description": "绘制文本的样式。",
              "type": "object",
              "properties": {
                "align": {
                  "description": "水平对齐方式。默认为 center。",
                  "type": "string",
                  "enum": ["left", "right", "center"]
                },
                "color": {
                  "description": "字体颜色，#RRGGBB 格式。默认为 #000000。",
                  "type": "string",
                  "format": "color"
                },
                "decoration": {
                  "description": "文本装饰。默认为 none。",
                  "type": "string",
                  "enum": ["none", "underline", "line-through"]
                },
                "family": {
                  "description": "字体名称。",
                  "type": "string"
                },
                "fontSrc": {
                  "description": "字体文件路径。",
                  "type": "string"
                },
                "lineSpacing": {
                  "description": "文本行间距。可填写像素值或百分比。默认为 20%。",
                  "type": "string"
                },
                "margin": {
                  "description": "字体边距。可填写像素值或百分比。默认为 0px。",
                  "type": "string"
                },
                "overflow": {
                  "description": "文本内容超出显示区域时处理方式。默认为 clip。",
                  "type": "string",
                  "enum": ["clip", "ellipsis"]
                },
                "size": {
                  "description": "字体大小。默认为 16px。",
                  "type": "string"
                },
                "style": {
                  "description": "字体样式。默认为 normal。",
                  "type": "string",
                  "enum": ["normal", "italic"]
                },
                "verticalAlign": {
                  "description": "垂直对齐方式。默认为 middle。",
                  "type": "string",
                  "enum": ["top", "middle", "bottom"]
                },
                "weight": {
                  "description": "字体粗细。默认为 normal。",
                  "type": "string",
                  "enum": ["normal", "bold"]
                },
                "whiteSpace": {
                  "description": "文本换行模式。默认为 nowrap。",
                  "type": "string",
                  "enum": ["nowrap", "normal"]
                }
              }
            },
            "richTextStyles": {
              "description": "绘制富文本的样式。",
              "type": "object",
              "properties": {
                "align": {
                  "description": "水平对齐方式。默认为 center。",
                  "type": "string",
                  "enum": ["left", "right", "center"]
                },
                "family": {
                  "description": "字体名称。",
                  "type": "string"
                },
                "fontSrc": {
                  "description": "字体文件路径。",
                  "type": "string"
                }
              }
            }
          }
        },
        "searchInput": {
          "description": "原生导航栏上的搜索框配置。",
          "type": "object",
          "properties": {
            "autoFocus": {
              "description": "是否自动获取焦点。",
              "type": "boolean"
            },
            "align": {
              "description": "非输入状态下文本的对齐方式。默认为 center。",
              "type": "string",
              "enum": ["center", "left", "right"]
            },
            "backgroundColor": {
              "description": "背景色。默认为 rgba(255,255,255,0.5)。",
              "type": "string",
              "format": "color"
            },
            "borderRadius": {
              "description": "输入框的圆角半径。支持像素值。默认为 0px。",
              "type": "string"
            },
            "placeholder": {
              "description": "提示文本。",
              "type": "string"
            },
            "placeholderColor": {
              "description": "提示文本颜色。默认为 #cccccc。",
              "type": "string",
              "format": "color"
            },
            "disabled": {
              "description": "是否禁止输入。默认为 false。",
              "type": "boolean"
            }
          }
        }
      }
    },
    "pullToRefresh": {
      "description": "下拉刷新。",
      "type": "object",
      "properties": {
        "color": {
          "description": "颜色，#RRGGBB 格式。",
          "type": "string",
          "format": "color"
        },
        "offset": {
          "description": "下拉刷新控件的起始位置，style 为 circle 时有效。支持百分比和像素值。",
          "type": "string"
        }
      }
    },
    "style": {
      "type": "object",
      "properties": {
        "navigationBarBackgroundColor": {
          "description": "导航栏背景色。",
          "type": "string",
          "format": "color"
        },
        "navigationBarTextStyle": {
          "description": "导航栏标题颜色和状态栏前景颜色。",
          "type": "string",
          "enum": ["black", "white"]
        },
        "navigationBarTitleText": {
          "description": "导航栏标题文字内容。",
          "type": "string"
        },
        "navigationStyle": {
          "description": "导航栏样式。",
          "type": "string",
          "enum": ["default", "custom"]
        },
        "backgroundColor": {
          "description": "下拉显示出来的窗口的背景色。",
          "type": "string",
          "format": "color"
        },
        "backgroundTextStyle": {
          "description": "下拉 loading 的样式。",
          "type": "string",
          "enum": ["dark", "light"]
        },
        "enablePullDownRefresh": {
          "description": "是否开启下拉刷新。",
          "type": "boolean"
        },
        "onReachBottomDistance": {
          "description": "页面触发上拉触底事件时和底部的距离，单位 px。",
          "type": "number"
        },
        "backgroundColorTop": {
          "description": "回弹区域顶部窗口的背景色。",
          "type": "string",
          "format": "color"
        },
        "backgroundColorBottom": {
          "description": "回弹区域底部窗口的背景色。",
          "type": "string",
          "format": "color"
        },
        "titleImage": {
          "description": "导航栏图片地址。",
          "type": "string"
        },
        "transparentTitle": {
          "description": "导航栏整体透明设置。",
          "type": "string",
          "enum": ["always", "auto", "none"]
        },
        "titlePenetrate": {
          "description": "导航栏点击穿透。",
          "type": "string",
          "enum": ["YES", "NO"]
        },
        "app-plus": {
          "description": "编译到 APP 的特定样式。",
          "type": "object",
          "properties": {
            "background": {
              "description": "窗体背景色。",
              "type": "string"
            },
            "titleNView": {
              "allOf": [
                { "$ref": "#/definitions/titleNView" },
                {
                  "properties": {
                    "titleOverflow": {
                      "description": "标题文字超出显示区域时处理方式。",
                      "type": "string",
                      "enum": ["clip", "ellipsis"]
                    },
