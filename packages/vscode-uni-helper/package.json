{
  "name": "vscode-uni-helper",
  "displayName": "uni-helper",
  "version": "0.5.2",
  "description": "增强 `uni-app` 系列产品在 `vscode` 内的体验。",
  "categories": [
    "Extension Packs"
  ],
  "keywords": [
    "uniapp",
    "uni-app",
    "unicloud",
    "uni-cloud",
    "uniui",
    "uni-ui",
    "uni",
    "helper",
    "schema",
    "schemas",
    "snippet",
    "snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ModyQyW/uni-helper/tree/main/packages/vscode-uni-helper"
  },
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "publisher": "ModyQyW",
  "type": "module",
  "scripts": {
    "release": "npx release-it"
  },
  "extensionPack": [
    "ModyQyW.vscode-uni-app-schemas",
    "ModyQyW.vscode-uni-app-snippets",
    "ModyQyW.vscode-uni-cloud-snippets",
    "ModyQyW.vscode-uni-ui-snippets"
  ],
  "engines": {
    "vscode": "^1.40.0"
  },
  "icon": "uni-app.png",
  "release-it": {
    "git": {
      "commitMessage": "chore(release): vscode-uni-helper@${version}",
      "tagName": "vscode-uni-helper@${version}"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "npx vsce package && npx vsce publish && npx ovsx publish -p $OVSX_PAT"
    }
  }
}
